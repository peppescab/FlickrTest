<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/Base.ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="myNormalWarningText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="MyProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:progress">@color/textColorPrimary</item>
    </style>

    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="@android:windowBackground">@color/md_grey_50</item>
        <item name="@android:textColor">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>